{
  "name": "Picture-in-Picture Everywhere",
  "description": "Watch videos using Picture-in-Picture on ANY website. Even if the video is hidden inside React or other UI framework components. Watch videos using PiP even if PiP is disabled for a video.",
  "version": "1.00",
  "icons": {
    "128": "assets/icon128.png"
  },
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_icon": {
      "19": "assets/icon19.png",
      "38": "assets/icon38.png"
    }
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "windows": "Alt+Shift+P",
        "mac": "Alt+Shift+P",
        "chromeos": "Alt+Shift+P",
        "linux": "Alt+Shift+P"
      }
    }
  },
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "permissions": [
    "<all_urls>",
    "tabs",
    "activeTab",
    "storage"
  ],
  "minimum_chrome_version": "69.0.3483.0",
  "manifest_version": 2
}
